module IO.Writer {

import IO.Error
import IO.Buffer

pub trait Writer[T] {
    fn write(&self, buffer: &ReadBuffer) -> Result[Int, Error]

    fn writeString(&self, input: String) -> Result[Int, Error] {
        let buffer = ByteBuffer.fromVec(input.toVecU8());
        self.write(buffer.asReadBuffer())
    }
}

}