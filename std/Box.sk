module Box {

import NativePtr

pub struct Box[T] {
    value: *T,

    pub fn new(value: T) -> Box[T] {
        let p: *T = allocate();
        store(p, value);
        Box(p)
    }

    pub fn get(&self) -> &T {
        let ptr = offset(self.value, 0);
        toRef(ptr)
    }

    pub fn release(mut self) -> T {
        let value = *self.value;
        deallocate(self.value);
        self.value = null();
        value
    }
}

instance[T] Drop[Box[T]] {
    fn drop(self) -> Self {
        if isNull(self.value) {
            return self;
        }
        {
            let value = *self.value;
        }
        deallocate(self.value);
        self
    }
}

}